<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="universidad.trabajo.concentrese.UserRegisterActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sign_in" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo_puzzles_white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Concéntrese"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Un juego de memoria!"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                />


            <!-- input field username -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_black_radius"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_white" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:textColorHint="@android:color/secondary_text_light_nodisable"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/input_field_name"
                    />
            </LinearLayout>


            <!-- input field email -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_black_radius"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_email_white" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@android:color/secondary_text_light_nodisable"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/input_field_email"
                    />
            </LinearLayout>

            <!-- input field password -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_black_radius"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_key_white" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/secondary_text_light_nodisable"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/input_field_pass"
                    />
            </LinearLayout>

            <!-- Boton login -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_magenta_radius"
                android:clickable="true"
                android:orientation="vertical"
                android:id="@+id/btn_registrarme"
                android:onClick="onClick"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/padding_button"
                    android:text="Registrarme"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>
