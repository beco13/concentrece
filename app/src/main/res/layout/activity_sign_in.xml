<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_sign_in"
        android:scaleType="centerCrop"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_puzzles_white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concéntrese"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Un juego de memoria!"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                />

            <!-- Boton login -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_magenta_radius"
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:clickable="true"
                android:id="@+id/btn_iniciar_sesion"
                android:onClick="onClick"
                android:contextClickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesión"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/padding_button"
                    android:layout_gravity="center_horizontal"

                    />
            </LinearLayout>


            <!-- Boton registrarse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_magenta_radius"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:id="@+id/btn_registrarme"
                android:onClick="onClick"
                android:contextClickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrarme"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:padding="@dimen/padding_button"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>
