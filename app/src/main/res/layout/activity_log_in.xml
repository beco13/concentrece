<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_sign_in"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_puzzles_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/btn_default_data_login"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Concéntrese"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un juego de memoria!"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            />

        <!-- input field email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_black_radius"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_email_white"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Correo"
                android:textColorHint="@android:color/secondary_text_light_nodisable"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                android:textSize="18dp"
                android:id="@+id/input_field_email"
                />
        </LinearLayout>

        <!-- input field password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_black_radius"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_key_white"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Contraseña"
                android:textColorHint="@android:color/secondary_text_light_nodisable"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:id="@+id/input_field_pass"
                />
        </LinearLayout>

        <!-- Boton login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_magenta_radius"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/btn_iniciar_sesion"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:padding="@dimen/padding_button"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
